<%- include('layout/debut.ejs')%>

<body>

<%- include('layout/navigation.ejs')%>

<h1>Emprunt</h1>
<main>
    <form action="emprunt" name="form" method="post">
        <label for="montant">Montant de l'emprunt (en €)</label>
        <input type="number" id="montant" name="montant" min="1000" max="10000000" required>
        <label for="duree">Durée de l'emprunt (en années)</label>
        <input type="number" id="duree" name="duree" min="1" max="20" required>
        <label for="taux">Taux (en %)</label>
        <input type="number" id="taux" name="taux" min="0" max="20" required>
        <button type="submit">Calculer les mensualités</button>
    </form>
    <% if (resultatMensuel !== '') { %>
        <div class="resultat-container custom-result">
            <%= resultatMensuel %>
        </div>
    <% } %>
    <p class="error"> <%= erreur %></p>


</main>

<%- include('layout/fin.ejs')%>